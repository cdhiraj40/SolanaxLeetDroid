{
  "compilerOptions": {
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "DOM"
    ],
    "paths": {
      "stream": ["./node_modules/readable-stream"]
    },
    "isolatedModules": false,
    "module": "esnext",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": [
    "src", "index.d.ts"
  ]
}
